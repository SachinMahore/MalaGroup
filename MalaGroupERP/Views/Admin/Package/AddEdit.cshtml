@using MalaGroupERP.Models
@model PackageModel
@{
    ViewBag.Title = "Package";
}

<script src="~/Content/Pages/Admin/Package/Package.js"></script>
<div id="breadcrumb"> <a href="/Home/Index" title="Go to Home" class="tip-bottom"><i class="icon-home"></i> Home</a> <a href="#" class="tip-bottom">Package Information</a> <a href="#" class="current">Add/Edit</a> </div>
<input type="hidden" id="hndPackageID" value="@Model.PackageID" />
<div class="container-fluid">
    <div class="row-fluid">
        <div class="widget-box">
            <div class="widget-title">
                <span class="icon"> <i class="icon-star-empty"></i> </span>
                <h5>Package</h5>
                <div class="btn-group pull-right">
                    <button type="button" class="btn btn-info" onclick="saveUpdatePackage()">Save</button>
                    <button type="button" class="btn btn-primary" onclick="deletePackage()" @(Model.PackageID == 0 ? "disabled" : "")>Delete</button>
                    <button type="button" class="btn btn-primary" onclick="searchPackage()">Search</button>
                </div>
            </div>
        </div>
        <div class="row-fluid">
            <div class="span8">
                <div class="widget-box collapsible">
                    <div class="widget-title">
                        <a href="#collapseOne" data-toggle="collapse">
                            <span class="icon"><i class="icon-align-justify"></i></span>
                            <h5>Details</h5>
                        </a>
                    </div>
                    <div class="collapse in" id="collapseOne">
                        <div class="widget-content span6">
                            <div class="form-vertical">
                                <div class="control-group">
                                    <label class="control-label">Package </label>
                                    <div class="controls">
                                        <input type="text" id="txtPackage" class="span11" value="@Model.Package" placeholder="Enter Package Detail" />&nbsp;<span id="errmsg"></span>
                                    </div>
                                </div>
                                <div class="control-group">
                                    <label class="control-label">No. Of Installment</label>
                                    <div class="controls">
                                        <input type="text" id="txtInstallment" class="span11" value="@Model.NoOfInstallment" placeholder="Enter Installment" />&nbsp;<span id="errmsg"></span>
                                    </div>
                                    
                                </div>
                                <div class="control-group">
                                    <label class="control-label">Price/Installment</label>
                                    <div class="controls">
                                        <input type="text" id="txtPrice" class="span11" placeholder="Price" value="@Model.Price" />&nbsp;<span id="errEMP"></span>
                                    </div>
                                </div>
                                <div class="control-group">
                                    @*When to charge the card (i.e. Post Data)*@

                                    <label class="control-label">Expiry Date</label>
                                    <div class="controls">
                                        <div data-date="12-02-2012" class="input-append date datepicker">
                                            <input type="text" id="txtExpiryDate" data-date-format="mm/dd/yyyy" class="datepicker span11" value="@Model.ExpiryDate">
                                            <span class="add-on"><i class="icon-th"></i></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="control-group">

                                    <div class="span3">
                                        <label class="control-label">Additional</label>
                                        <div class="controls">
                                            <input type="checkbox" id="chkAdditional" name="radios" @(Model.InPackageAdditional == 1 ? "checked" : "") />
                                        </div>
                                    </div>

                                    <div class="span3">
                                        <label class="control-label">Identity theft</label>
                                        <div class="controls">
                                            <input type="checkbox" id="chkIdentity" name="radios" @(Model.IdentityTheft == 1 ? "checked" : "") />
                                        </div>
                                    </div>
                                    <div class="span3">
                                        <label class="control-label">Renewal</label>
                                        <div class="controls">
                                            <input type="checkbox" id="chkRenewal" name="radios" @(Model.IsRenewal == 1 ? "checked" : "") />
                                        </div>
                                    </div>
                                    <div class="span3">
                                        <label class="control-label">Decal</label>
                                        <div class="controls pull-left  span10">
                                            <input type="checkbox" class="pull-left" id="chkDecal" name="radios" @(Model.Decal == 1 ? "checked" : "") />
                                            <div class="controls pull-right span9 hidden" id="divDecal" style="display: inline-block;">
                                                <select id="ddlDecalNumber" class="no-search">
                                                    <option value="1" selected>1</option>
                                                    <option value="2">2</option>
                                                    <option value="3">3</option>
                                                </select>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                    

                </div>
            </div>
            
        </div>
    </div>
</div>

<footer class="fixed-bottom">

    <div class="span12 btn-icon-pg">
        <ul>
            <li><i class="icon-bell"></i> Phone</li>
            <li><i class="icon-comment"></i> Notes</li>
            <li><i class="icon-time"></i> History</li>
        </ul>
    </div>

</footer>
@*Modal Pop up*@



<style>
    footer {
        position: fixed;
        height: 40px;
        bottom: 0;
        width: 100%;
        background-color: white;
        box-shadow: 0px 0px 5px 0px #888888;
    }

    .pd-vehicletblText {
        text-align: center !important;
    }

    #errmsg {
        color: red;
    }

    #errEMP {
        color: red;
    }
</style>
<script type="text/javascript">

    if(@Model.PackageID==0)
    {
        clearPackageField();
    }
    //$("#ddlInstallment").val(@Model.NoOfInstallment).trigger('change');
    if(@Model.Decal==1)
    {
        $('#divDecal').removeClass("hidden");
        $("#ddlDecalNumber").val(@Model.DecalNumber).trigger('change');
    }
</script>